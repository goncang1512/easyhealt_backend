{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022", // ðŸŸ¢ pakai NodeNext untuk ESM
    "moduleResolution": "bundler", // ðŸŸ¢ resolve .ts ke .js otomatis
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "types": ["node"],
    "lib": ["ESNext"],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
